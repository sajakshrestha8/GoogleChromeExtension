{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "This is my extension",
  "action": {
    "default_popup": "hello.html"
  },
  "permissions": [],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}